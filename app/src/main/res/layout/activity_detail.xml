<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movie"
            type="com.example.flixter.models.Movie"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity"
        android:background="@color/black"
        android:orientation="vertical">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:transitionName="profile"/>


        <TextView
            android:id="@+id/tvTitleD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="serif"
            android:textColor="@color/green_light24"
            android:textSize="26dp"
            android:textStyle="bold"
            tools:text="Minions: The Rise of Gru" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/customRatingBar"
            android:progressBackgroundTint="@color/green_light25"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="10"
            android:layout_margin="5dp"
            android:layout_below="@+id/tvTitleD"
            android:rating="8.5" />

        <TextView
            android:id="@+id/tvOverviewD"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ratingBar"
            tools:text="A fanboy of a supervillain supergroup known as the Vicious 6, Gru hatches a plan to become evil enough to join them, with the backup of his followers, the Minions." />
    </RelativeLayout>
</layout>